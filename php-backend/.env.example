# FoodTrack Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration (Required)
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_username
DB_PASS="your_password_with_special_chars"

# Security (Required)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random

# Application Settings (Optional)
APP_DEBUG=false

# Example for 1blu hosting:
# DB_HOST=localhost
# DB_NAME=db123456_foodtrack
# DB_USER=db123456_user
# DB_PASS="MySecurePassword123!"
# JWT_SECRET=AbCdEf123456789RandomSecretKey
# APP_DEBUG=false
